{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "vscode-status-extension",
    "displayName": "VSCode Status Extension",
    "version": "1.1.2",
    "description": "Sends your Visual Studio Code status to an external API.",
    "private": false,
    "publisher": "PowerPCFan",
    "icon": "assets/icon.png",
    "scripts": {
        "build:check": "tsc --noEmit",
        "build": "node esbuild.mjs",
        "dev": "node esbuild.mjs --watch"
    },
    "type": "module",
    "main": "./dist/extension.cjs",
    "author": {
        "name": "PowerPCFan"
    },
    "license": "AGPL-3.0",
    "keywords": [
        "vscode",
        "status",
        "api",
        "activity",
        "tracking"
    ],
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/PowerPCFan/vscode-status-extension.git"
    },
    "bugs": {
        "url": "https://github.com/PowerPCFan/vscode-status-extension/issues"
    },
    "homepage": "https://github.com/PowerPCFan/vscode-status-extension#readme",
    "dependencies": {
        "@types/node-fetch": "^2.6.13",
        "dayjs": "^1.11.13",
        "lodash-es": "^4.17.21",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^22.14.0",
        "@types/vscode": "^1.96.2",
        "@vscode/vsce": "^3.3.2",
        "esbuild": "^0.25.2",
        "typescript": "^5.8.3"
    },
    "galleryBanner": {
        "color": "#6477C1",
        "theme": "dark"
    },
    "activationEvents": [
        "*"
    ],
    "extensionKind": [
        "ui"
    ],
    "contributes": {
        "commands": [
            {
                "command": "vscodeStatus.enable",
                "title": "Enable VSCode Status",
                "category": "VSCode Status"
            },
            {
                "command": "vscodeStatus.disable",
                "title": "Disable VSCode Status",
                "category": "VSCode Status"
            },
            {
                "command": "vscodeStatus.reconnect",
                "title": "Reconnect VSCode Status",
                "category": "VSCode Status"
            },
            {
                "command": "vscodeStatus.generateNewToken",
                "title": "Generate New Authentication Token",
                "category": "VSCode Status"
            },
            {
                "command": "vscodeStatus.generateNewUserId",
                "title": "Generate New User ID",
                "category": "VSCode Status"
            }
        ],
        "configuration": {
            "title": "VSCode Status",
            "type": "object",
            "properties": {
                "vscodeStatus.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Controls if VSCode Status should send updates to the API across all workspaces"
                },
                "vscodeStatus.apiUrl": {
                    "type": "string",
                    "default": "https://vscode-status.powerpcfan.xyz/update-status",
                    "description": "The API endpoint to send status updates to"
                },
                "vscodeStatus.authToken": {
                    "type": "string",
                    "default": "",
                    "description": "Authentication token for API requests. Automatically generated if none is provided."
                },
                "vscodeStatus.userId": {
                    "type": "string",
                    "default": "",
                    "description": "User ID for tracking, updating, and receiving status updates to and from the API. Automatically generated if none is provided."
                },
                "vscodeStatus.detailsIdling": {
                    "type": "string",
                    "default": "Idling",
                    "description": "Custom string for the details section when idling"
                },
                "vscodeStatus.detailsEditing": {
                    "type": "string",
                    "default": "Editing {file_name}",
                    "description": "Custom string for the details section when editing"
                },
                "vscodeStatus.detailsDebugging": {
                    "type": "string",
                    "default": "Debugging {file_name}",
                    "description": "Custom string for the details section when debugging"
                },
                "vscodeStatus.suppressNotifications": {
                    "type": "boolean",
                    "default": false,
                    "description": "Decides if error messages are shown to the user"
                },
                "vscodeStatus.workspaceExcludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "Patterns of workspaces to ignore"
                },
                "vscodeStatus.idleTimeout": {
                    "type": "number",
                    "default": 0,
                    "description": "Time (in seconds) to stop sending updates when idling. 0 (the default) means no timeout"
                }
            }
        }
    },
    "engines": {
        "vscode": "^1.96.2"
    }
}
